{
  "name": "Bizzey",
  "productName": "Bizzey",
  "version": "1.0.0",
  "description": "Smart invoicing software",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\""
  },
  "keywords": [],
  "author": {
    "name": "Bizzey",
    "email": "info@bizzey.be"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./src/images/build/icons/icon"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "bizzey"
          }
        },
        {
          "name": "@electron-forge/maker-zip"
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "maintainer": "Bizzey",
              "homepage": "https://www.bizzey.be"
            }
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "icon": "./src/images/build/icons/icon.icns",
            "background": "./src/images/build/dmg/dmg-background.png",
            "format": "ULFO",
            "overwrite": true
          }
        }
      ]
    }
  },
  "dependencies": {
    "@electron-forge/maker-dmg": "^6.0.0-beta.43",
    "electron-dl": "^1.14.0",
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "6.0.0-beta.43",
    "@electron-forge/maker-deb": "6.0.0-beta.43",
    "@electron-forge/maker-rpm": "6.0.0-beta.43",
    "@electron-forge/maker-squirrel": "6.0.0-beta.43",
    "@electron-forge/maker-zip": "6.0.0-beta.43",
    "electron": "6.0.0"
  }
}
